---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <a href="/blog">All blogs</a>
  <p>Written by {frontmatter.author}</p>
  <p>Published date: {frontmatter.pubDate.toString().slice(0, 10)}</p>
  <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
  <h3 style="text-decoration: underline;">Tags</h3><ul
    style="display: flex; list-style-type:none; gap:16px;"
  >
    {frontmatter.tags.map((t: string) => <li>{t}</li>)}
  </ul>
  <p>{frontmatter.description}</p>
  <slot />
  <a href="/blog">All blogs</a>
</BaseLayout>
